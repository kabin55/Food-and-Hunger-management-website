{
    "version": 2,
    "builds": [{
            "src": "p1/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.12.2" }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles_builds"
            }
        }
    ],
    "routes": [{
            "src": "/(.*)",
            "dest": "p1/wsgi.py"
        },
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        }
    ]
}